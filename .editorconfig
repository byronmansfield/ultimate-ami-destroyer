 root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

# Specific file types
[*.{js,css,scss,sass,html}]
indent_style = space
indent_size = 2

[.py]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*go]
indent_style = tab
indent_size = 4
